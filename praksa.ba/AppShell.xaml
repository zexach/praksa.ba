<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="praksa.ba.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:praksa.ba.Views"
    Shell.FlyoutBehavior="Disabled">
    

    <TabBar x:Name="TabBar">
        <Tab Title="Prijava" Icon="login.svg">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage"/>
        </Tab>
        <Tab Title="Registracija" Icon="register.svg">
            <ShellContent ContentTemplate="{DataTemplate views:RegisterPage}" Route="RegisterPage"/>
        </Tab>
    </TabBar>

</Shell>
